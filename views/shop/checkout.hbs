  {{> header}}
 <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h1>Checkout</h1>
            <h4>Your Total:${{total}} </h4>  

        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>

            <form action="/checkout" method="post" id="checkout-form">
                <div class="row">
                    <div class="col-xs-12">
                   <div class="form-group">
                       <label for="name">Name on Cart:</label>
                       <input type="text" id="name" class="form-control" required name="name">
                   </div>
                    </div>
                    <div class="col-xs-12">
                   <div class="form-group">
                       <label for="address">Card Number:</label>
                       <input type="text" id="name" class="form-control" required name="address">
                   </div>
                    </div>
                    <hr>
                    <div class="col-xs-12">
                   <div class="form-group">
                       <label for="name">Expiration Date:</label>
                       <input type="text" id="name" class="form-control" required>
                   </div>
                    </div>
                    <div class="col-xs-12">
                   <div class="form-group">
                       <label for="name">CVC:</label>
                       <input type="text" id="name" class="form-control" required>
                   </div>
                    </div>
                   
                    
                </div>
                   {{!-- <button type="submit" class="btn btn-success"> Buy now </button> --}}
                      <a href="/buy" type="submit" class="btn btn-success">Buy Now</a>

            </form>
        </div>
 </div>








